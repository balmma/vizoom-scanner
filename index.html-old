<!DOCTYPE HTML>
<html>
  <head>
    <meta name="viewport" content="width=320; user-scalable=no" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title>Vizoom Scanner</title>
      <link rel="stylesheet" href="master.css" type="text/css" media="screen" title="no title" charset="utf-8">
      <script type="text/javascript" charset="utf-8" src="prototype.js"></script>      
      <script type="text/javascript" charset="utf-8" src="phonegap-1.4.1.js"></script>      
      <script type="text/javascript" charset="utf-8" src="barcodescanner.js"></script>      
      <script type="text/javascript" charset="utf-8">
    
    function init(){
        console.log("GOT AN ONLOAD!!!")
        document.addEventListener("touchmove", preventBehavior, false);
        document.addEventListener("menubutton", scan, false);   
    }
    
    var preventBehavior = function(e) { 
      e.preventDefault(); 
    };
              
    function scan() {
      new BarcodeScanner().scan(function(result) {
        var token = result.text.split(';');
        var surname = token[0];
        var firstname = token[1];
        var secret = token[2]; 
       
         //$('#info').html('Loading data for '+ firstname + ' ' + surname + ' ...'); 
       

        jQuery.post('http://vizoom.smss.ch/_rest/user?secret='+secret,function(json){
          //$('#info').html('<p><label style="display:inline-block;width:100px;">Name:</label>'+json.firstname+' '+json.surname+'</p><p><label style="display:inline-block;width:100px;">E-Mail:</label>'+json.email+'</p><p<label style="display:inline-block;width:100px;">Geburtstag:</label>'+json.birthday+'</p>');
        });
      });              
    } 
    
    function encode(type, data) {
        window.plugins.barcodeScanner.encode(type, data, function(result) {
                alert("encode success: " + result);
            }, function(error) {
                alert("encoding failed: " + error);
            });
    }
    
  </script>
  </head>
  <body onload="init();" id="stage" class="theme">
    
    <div style="min-height:450px;" id="info">Please scan a barcode</div>   
    <a href="#" class="btn large" onclick="scan();">Scan</a>
  </body>
</html>
